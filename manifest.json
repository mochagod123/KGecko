{
  "manifest_version": 3,
  "name": "GeckoKahoot",
  "version": "1.0.0",
  "description": "このプラグインは、カスタムなKahootをプレイできるようにします。",
  "content_scripts": [{
    "matches": ["https://kahoot.it/*"],
    "run_at": "document_end",
    "all_frames": true,
    "js": ["content-script.js"]
  }],
  "permissions": [
    "storage"
  ]
}